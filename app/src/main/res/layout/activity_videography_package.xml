<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".VideographyPackageActivity">

    <TextView
        android:id="@+id/tvVideographyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Videography Packages"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnAddVideographyPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Videography Package"
        android:background="@drawable/btn_primary"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listViewVideographyPackages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tvEmptyMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No videography packages available"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>
