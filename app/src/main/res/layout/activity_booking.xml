<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9C3AD"
    tools:context=".BookingActivity">

    <!-- Spinner Pakej -->

    <!-- Pilih Tarikh -->

    <!-- Pilih Masa -->

    <!-- Butang -->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:text="Customer Booking"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinnerPakej"
        app:layout_constraintEnd_toEndOf="@+id/spinnerPakej"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/spinnerPakej"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.743" />

    <Spinner
        android:id="@+id/spinnerPakej"
        android:layout_width="394dp"
        android:layout_height="56dp"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/etDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="390dp"
        android:layout_height="47dp"
        android:background="@android:drawable/edit_text"
        android:focusable="false"
        android:hint="Date"
        android:inputType="none"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/etTime"
        app:layout_constraintEnd_toEndOf="@+id/etTime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etTime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="392dp"
        android:layout_height="47dp"
        android:layout_marginBottom="84dp"
        android:background="@android:drawable/edit_text"
        android:focusable="false"
        android:hint="Time"
        android:inputType="none"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSendOrder"
        app:layout_constraintEnd_toEndOf="@+id/btnSendOrder"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnSendOrder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnSendOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#504239"
        android:padding="12dp"
        android:text="Send Order"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.622" />

</androidx.constraintlayout.widget.ConstraintLayout>